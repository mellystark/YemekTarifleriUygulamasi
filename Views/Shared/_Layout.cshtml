<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YemekTarifleriUygulamasi.styles.css" asp-append-version="true" />
    <style>
        /* Navbar'ı sabit hale getirmek */
        .navbar {
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            background-color: #fff; /* Arka plan rengi, kayan içerikle kontrast oluşturur */
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Hafif bir gölge efekti */
            padding: 10px 30px;
        }

        /* Sayfa içeriğini navbar yüksekliğine göre hizalamak */
        body,html {
           
            overflow-x: hidden; /* Yatay scroll'u kapatır */
        }

        /* Arama kutusu ve buton için düzenleme */
        .search-container {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px; /* Buton ve kutu arasındaki mesafe */
        }

        .search-box {
            width: 150px; /* Başlangıçta küçük bir kutu */
            max-width: 300px; /* Maksimum genişlik */
            padding: 8px;
            font-size: 1rem;
            border-radius: 5px;
            border: 2px solid #ccc;
            outline: none;
            transition: width 0.3s ease; /* Genişleme animasyonu */
        }

            .search-box:focus {
                width: 300px; /* Tıklandığında genişler */
                border-color: #cc3333; /* Odaklandığında renk değişikliği */
            }

        .search-btn {
            background-color: #cc3333;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 15px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

            .search-btn:hover {
                background-color: #ffcc99;
            }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="position: relative;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">YemekTarifleriUygulamasi</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="#">En İyi Tarifler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="#">Hakkımızda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="#">İletişim</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">/</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- Arama kutusu navbar'ın içinde -->
            <div class="search-container">
                @if (ViewContext.RouteData.Values["controller"]?.ToString() != "Account")
                {
                    <input type="text" id="search-box" class="search-box" placeholder="Ara..." />
                    <button class="search-btn" onclick="toggleSearchBox()">🔍</button>
                }
            </div>

        </nav>
        <br /><br />
    </header>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br />
    <br />
    <div class="footer-banner">
        <br /><br />
        <div class="email-contact">
            <h4>Bizimle İletişime Geçin</h4>
            <input type="email" placeholder="Sorularınız için bize mail atın..." class="email-input" style="width:250px;">
            <button class="send-btn" style="width:150px;">Gönder</button>
        </div>
        <div class="contact-info">
            <h4>İletişim</h4>
            <p><i class="fas fa-phone"></i> +90 123 456 789</p>
            <p><i class="fas fa-envelope"></i> info@example.com</p>
            <p><i class="fas fa-map-marker-alt"></i> İstanbul, Türkiye</p>
        </div>

        <div class="social-media">
            <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a><br />
            <a href="#" class="social-icon"><i class="fab fa-facebook"></i></a><br />
            <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a><br />
            <a href="#" class="social-icon"><i class="fab fa-youtube"></i></a>
        </div>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

<script>
    function toggleSearchBox() {
        var searchBox = document.getElementById('search-box');
        searchBox.classList.toggle('active');  // 'active' sınıfını ekler veya kaldırır
        searchBox.focus(); // Tıklanırken kutuya odaklanır
    }


</script>
</html>
