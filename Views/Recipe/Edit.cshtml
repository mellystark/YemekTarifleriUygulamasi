@model YemekTarifleriUygulamasi.Models.Recipe

<div class="container mt-5">
    <h1>Tarifi Düzenle</h1>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="Title">Tarif Adı</label>
            <input type="text" id="Title" name="Title" class="form-control" value="@Model.Title" required />
        </div>

        <div class="form-group">
            <label for="Description">Tarif Açıklaması</label>
            <textarea id="Description" name="Description" class="form-control" rows="3" required>@Model.Description</textarea>
        </div>

        <div class="form-group">
            <label for="Ingredients">Malzemeler</label>
            <textarea id="Ingredients" name="Ingredients" class="form-control" rows="3" required>@Model.Ingredients</textarea>
        </div>

        <div class="form-group">
            <label for="Steps">Yapılışı</label>
            <textarea id="Steps" name="Steps" class="form-control" rows="5" required>@Model.Steps</textarea>
        </div>

        <!-- Kategori Seçimi -->
        <div class="form-group">
            <label for="Category">Kategori</label>
            @Html.DropDownListFor(model => model.Category, (SelectList)ViewBag.Categories, "Kategori Seçin", new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label for="Image">Tarif Görseli</label>
            <input type="file" id="Image" name="Image" class="form-control" accept="image/*" />
        </div>

        <button type="submit" class="btn btn-primary mt-3">Tarifi Güncelle</button>
    </form>
</div>
